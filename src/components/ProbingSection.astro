<style>
  #probing .section-container {
    max-width: 1000px;
  }

  /* Table Styles */
  #probing .table-wrapper {
    overflow-x: auto;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    background: white;
    margin-top: 2rem;
  }

  #probing .probing-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.8rem;
  }

  #probing th {
    padding: 0.6rem 0.4rem;
    text-align: center;
    border: 1px solid #eee;
  }

  #probing td {
    padding: 0.5rem 0.3rem;
    text-align: center;
    border: 1px solid #eee;
  }

  #probing .model-header {
    text-align: left;
    padding-left: 1rem;
    background: #f8f9fa;
    font-weight: 700;
    min-width: 180px;
    color: #333;
  }

  #probing .group-header {
    font-weight: 700;
    color: #2a2f6c;
    background: #fff;
  }

  #probing .metric-header {
    font-weight: 700;
    color: #2a2f6c;
    background: #fff;
    vertical-align: middle;
  }

  #probing .sub-header {
    font-size: 0.85rem;
    background: #f0f4ff;
    font-style: italic;
    color: #555;
  }

  #probing .section-row td {
    background: #eef2f6;
    font-weight: 700;
    text-align: left;
    padding: 0.8rem 1rem;
    color: #2a2f6c;
    border-top: 2px solid #dde1e6;
  }

  #probing .model-name {
    text-align: left;
    padding-left: 1rem;
    font-weight: 600;
    color: #333;
  }

  #probing .proprietary-row {
    background-color: #FFF4F0;
  }

  #probing .best-score {
    background-color: rgba(100, 100, 100, 0.25);
    font-weight: 700;
  }

  /* Findings Styles (replicated from KeyFindings for consistency) */
  .results-analysis-single {
    background: #fff;
    border-radius: 12px;
    padding: 1.5rem 2rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid #e2e8f0;
  }

  .analysis-heading {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2a2f6c;
    margin: 0 0 1.25rem 0;
    text-align: center;
  }

  .findings-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .finding-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 3px solid #2a2f6c;
  }

  .finding-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .finding-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .finding-content strong {
    font-size: 0.95rem;
    color: #1f2a60;
  }

  .finding-detail {
    font-size: 0.85rem;
    color: #666;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .findings-grid {
      grid-template-columns: 1fr;
    }
  }

  .metrics-explanation {
    max-width: 900px;
    margin: 0 auto 2rem;
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
  }

  .metrics-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
  }

  .metrics-list li {
    font-size: 0.95rem;
    color: #4b5563;
    line-height: 1.5;
  }

  .metrics-list li strong {
    color: #2a2f6c;
    font-weight: 700;
  }
</style>